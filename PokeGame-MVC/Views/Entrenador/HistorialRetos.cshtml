                        {
                            @reto.Retador.Nombre
                        }
                        else if (reto.Estado == "Retado Ganó")
                        {
                            @reto.Retado.Nombre
                        }
                        else
                        {
                            <span>Empate</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
