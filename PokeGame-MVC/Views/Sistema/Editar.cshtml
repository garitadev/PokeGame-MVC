@model PokeGame_MVC.Models.UsuarioModel

@{
    bool editSuccess = TempData["EditSuccess"] != null && (bool)TempData["EditSuccess"];

    if (editSuccess)
    {
        
    }
}
<div class="container mt-4" data-editsuccess=@editSuccess>
    <h2>Editar Usuario</h2>
    @using (Html.BeginForm("EditarUsuario", "Sistema", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Nombre)
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Nombre" })
            @Html.ValidationMessageFor(m => m.Nombre, null, new { @class = "text-danger" })
        </div>
        <div class="form-group mt-4">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
        </div>
        <div class="form-group mt-4">
            @Html.LabelFor(m => m.Username)
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username" })
            @Html.ValidationMessageFor(m => m.Username, null, new { @class = "text-danger" })
        </div>
        <div class="form-group mt-4">
            @Html.LabelFor(m => m.RolId)
            @Html.TextBoxFor(m => m.RolId, new { @class = "form-control", placeholder = "Rol Id" })
            @Html.ValidationMessageFor(m => m.RolId, null, new { @class = "text-danger" })
        </div>
        @Html.HiddenFor(m => m.Id)
        <button type="submit" class="btn btn-primary mt-4">Guardar cambios</button>
    }
</div>