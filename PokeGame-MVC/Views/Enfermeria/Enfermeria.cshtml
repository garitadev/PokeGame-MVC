@model IEnumerable<PokeGame_MVC.Models.EnfermeriaModel>

<h2 class="mb-4">Pokémon en la Enfermería</h2>

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Pokémon</th>
                <th>Entrenador</th>
                <th>Atendido por</th>
                <th>Fecha de Ingreso</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Pokedex.Nombre</td>
                    <td>@item.Usuario.Nombre</td>
                    <td>@item.UsuarioAtiende.Nombre</td>
                    <td>@item.FechaIngreso</td>
                    <td>
                        <form asp-action="DarDeAlta" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@item.EnfermeriaId" />
                            <button type="submit" class="btn btn-success btn-sm">Dar de Alta</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
