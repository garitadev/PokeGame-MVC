<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PokeGame_MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PokeGame_MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">




    @* <link href="~/lib/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet"> *@

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
         
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PokeGame_MVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole("1"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Biblioteca Pokemones</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Pokedex" asp-action="PokedexRead">Pokedex</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Sistema" asp-action="Listar">Administracion</a>
                            </li>
                        }

                        @if (User.IsInRole("2"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Pokedex" asp-action="PokedexRead">Pokedex</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Entrenador" asp-action="MiEquipo">Entrenador</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="mensajesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Mensajes
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="mensajesDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Mensajes" asp-action="BandejaDeEntrada">Bandeja de Entrada</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Mensajes" asp-action="EnviarMensaje">Enviar Mensaje</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Mensajes" asp-action="MensajesEnviados">Mensajes Enviados</a></li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="retosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Retos
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="retosDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Retos" asp-action="EnviarReto">Enviar Reto</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Retos" asp-action="MisRetos">Retos Pendientes</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Retos" asp-action="HistorialRetos">Historial Retos</a></li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("3"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Enfermeria" asp-action="Enfermeria">Enfermería</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="mensajesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Mensajes
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="mensajesDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Mensajes" asp-action="BandejaDeEntrada">Bandeja de Entrada</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Mensajes" asp-action="EnviarMensaje">Enviar Mensaje</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Mensajes" asp-action="MensajesEnviados">Mensajes Enviados</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- Perfil del Usuario al final a la derecha -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="perfilDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @User.Identity.Name <!-- Muestra el nombre del usuario -->
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="perfilDropdown">
                                @* <li><a class="dropdown-item" asp-area="" asp-controller="Sistema" asp-action="Perfil">Ver Perfil</a></li> *@
                                <li><a class="dropdown-item" asp-area="" asp-controller="Sistema" asp-action="Logout">Cerrar Sesión</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - PokeGame_MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* <script src="~/lib/sweetalert2/dist/sweetalert2.all.min.js"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
